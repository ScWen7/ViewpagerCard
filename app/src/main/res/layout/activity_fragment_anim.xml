<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fragment_anim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pinxiango.studytest.FragmentAnimActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_showa"
            android:text="显示A"
            android:onClick="showA"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_showb"
            android:onClick="showB"
            android:text="显示B"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <com.pinxiango.studytest.DrawableRadioButton
        android:layout_width="wrap_content"
        android:text="测试DrawableRadioButton"
        android:drawableRight="@mipmap/ic_launcher"
        app:drawableWidth="100dp"
        app:drawableHeight="100dp"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
